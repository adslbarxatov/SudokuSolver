<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RD_AAOW.SolutionPage">

	<!-- Раздел ввода значений -->
	<ScrollView HorizontalOptions="Fill">
		<StackLayout>

			<Label />

			<StackLayout Orientation="Vertical" HorizontalOptions="Center" x:Name="MasterField" />

			<BoxView VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="1" 
				WidthRequest="200" Color="#505050" Margin="6" />

			<StackLayout Orientation="Horizontal" HorizontalOptions="Center">
				<Button x:Name="KeyboardButton" VerticalOptions="Center" />
				<Label Text=" | " VerticalOptions="Center" />
				<Button x:Name="SolveButton" VerticalOptions="Center" />
				<Label Text=" | " VerticalOptions="Center" />
				<Button x:Name="MenuButton" VerticalOptions="Center" />
			</StackLayout>

			<Label />

		</StackLayout>
	</ScrollView>
</ContentPage>
