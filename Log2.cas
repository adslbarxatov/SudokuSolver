///////////////////////////////////////////////////////////////////////////
// Логарифм по основанию 2
double log2 (double x)
	{
	double y;

	_asm	{
			fld1
			fld x
			fyl2x
			fstp y
			}

	return y;
	}

///////////////////////////////////////////////////////////////////////////
// Логарифм по основанию 2 в целых числах
unsigned int log2ui (unsigned int x)
	{
	return (unsigned int)log2 ((double)x);
	}
